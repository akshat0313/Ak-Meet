<body>
    <div style="width: 100%; height:100%;">
        <div id="sketch"> <!--whiteboard-->
            <canvas className="board" id="board" width="800" height="535" style="background: white"></canvas>
            <div style="text-align: center; background: white; bottom: 0; margin: 5px auto; padding: 5px; position: absolute; width: 100%">
               <i class="fas fa-pen" style="margin: 0 5px;" onClick="changeMode(1)"></i>
               <i class="fas fa-eraser" style="margin: 0 5px;" onClick="changeMode(0)"></i>
               <button id="clr">Clear board</button>
            </div>
         </div>
    </div>
    
