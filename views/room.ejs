  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  <link rel="stylesheet" href="style.css">
  <title>Document</title>
  <style>
    #video-grid {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
      display: grid;
      grid-template-columns: repeat(auto-fill, 300px);
      grid-auto-rows: 300px;
      width: 100%; 
      height:100%;
    }
    
    video {
      width: 100%;
      /* height: 100%; */
      object-fit: fill;
    }

    #video {
  border: 1px solid #999;
  /* width: 98%; */
  /* max-width: 860px; */
  /* object-fit: cover; */
}

.error {
  color: red;
}

.warn {
  color: orange;
}

.info {
  color: darkgreen;
}

  </style>
</head>
<body>
   <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Meeting Details</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Get a shareable link for this meeting.
          </div><div><h4 id="urlcpy-fn"></h4></div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" onclick="copyurl();">Copy Meeting Link</button>
          </div>
        </div>
      </div>
    </div>
    <div class="main">
       <div class="main__left">
          <div class="main__videos">

             <div id="video-grid">
               <video id="video" allow="display-capture" autoplay></video>
             </div>
             
          </div>
          <div class="main__controls">
             <div class="main__controls__block">
                <div onclick="muteUnmute()" class="main__controls__button main__mute_button">
                   <i class="fas fa-microphone"></i>
                   <span>Mute</span>
                </div>
                <div onclick="playStop()" class="main__controls__button main__video_button" >
                   <i class="fas fa-video"></i>
                   <span>Stop Video</span>
                </div>
                <button onclick="" class="btn btn-secondary" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                   <!-- <i class="fas fa-video"></i> -->
                   <span>Share Link</span>
                </button>
             </div>
             <div class="main__controls__block">
                
                <div class="main__controls__button" id="scrsh1">
                   <!-- <p id="uuid" ><window class="href">Ak-Meet</window></p> -->
                   <p></p>
                   <p id="scrsh" ><window class="href" id="start">Start Sharing</window></p>
                   <!-- <p id="" ><a class="href" id="stop">stop</a></p> -->
                   
                </div>
                
             </div>
             <div class="main__controls__block" onclick="location.href='/view';">
                <div class="main__controls__button" onclick="location.href='/view';">
                   <a href="/view"><span class="leave_meeting" onclick="location.href='/view';">Leave Meeting</span></a>
                </div>
             </div>
          </div>
       </div>
       <div class="main__right">
          <div class="main__header">
             <h6>Chat</h6>
          </div>
          <div class="main__chat_window">
             <ul class="messages">
               <!-- <strong>Log:</strong> -->
               <br>
               <pre id="log"></pre>
             </ul>
 
          </div>
          <div class="main__message_container">
             <input id="chat_message" type="text" placeholder="Type message here...">
          </div>
       </div>
    </div>
 </body>
</html>
